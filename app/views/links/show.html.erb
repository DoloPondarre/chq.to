<% if flash.now[:notice] %>
  <div class="alert alert-notice">
    <%= flash.now[:notice] %>
  </div>
<% end %>

<h1><%= @link.name %></h1>

<p>
  <strong>URL:</strong>
  <%= @link.url %>
</p>

<p>
  <strong>Short URL:</strong>
  <%= link_to follow_link_url(@link.slug), follow_link_path(slug: @link.slug) %>
</p>

<p>
  <strong>Link Type:</strong>
  <%= @link.link_type %>
</p>

<%if @link.link_type === "Temporary"%>
  <p>
    <strong>Expires At:</strong>
    <%= @link.expires_at %>
  </p>
<%end%>

<%if @link.link_type === "Private"%>
  <p>
    <strong>Password:</strong>
    <%= @link.password %>
  </p>
<%end%>

<%= link_to 'Edit', edit_link_path(@link), class:"btn btn-primary" %><br>
<%= link_to 'Back', links_path %> 