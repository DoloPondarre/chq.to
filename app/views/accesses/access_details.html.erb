<h1>Access Details for <%= @link.name %></h1>

<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %><br>

<%= render 'form_search' %>
<br>

<table>
  <thead>
    <tr>
      <th>IP Adress</th>
      <th>Date and Time</th>
    </tr>
  </thead>
  <tbody>
    <% @accesses.each do |access| %>
      <tr>
        <td><%= access.ip_address %></td>
        <td><%= access.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', links_path %> 